                android:textSize="14sp" />

            <View
                android:id="@+id/cart2"
                android:layout_width="20dp"
                android:layout_height="8dp"
                android:layout_below="@id/line2"
                android:layout_toRightOf="@id/count2"
                android:background="@color/placeholder_bg"
