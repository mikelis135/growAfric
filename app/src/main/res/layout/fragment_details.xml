<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="@dimen/activity_horizontal_margin">
<RelativeLayout
   android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

     <!--Business Name, Address, Revenue generated, amount needed, founder name, skills, Previous business revenue, account bvn, social media links-->
    <!---->

    <EditText
        android:id="@+id/founderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Founder's Name"
        android:inputType="text"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/founderName"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_business_center_black_24dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/founderName"
        android:hint="Business Name"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/businessName"
        android:layout_marginBottom="10dp"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:layout_marginTop="10dp"
        android:drawableTint="@color/business_title"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/businessName"
        android:inputType="text"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/address"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/revenueGenerated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableTint="@color/business_title"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
        android:layout_below="@id/address"
        android:hint="Revenue generated"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/revenueGenerated"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/amountNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/revenueGenerated"
        android:hint="Amount Needed [in dollars]"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/amountNeeded"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Skills, profession"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_build_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/amountNeeded"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/skills"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/previousBusinessRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/skills"
        android:hint="Previous Revenue if you have done business before"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/previousBusinessRevenue"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/accountBvn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Bank verification number"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/business_title"
        android:drawableLeft="@drawable/ic_security_black_24dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/previousBusinessRevenue"
        android:inputType="number"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/accountBvn"
        android:background="@color/grey_5"/>

    <EditText
        android:id="@+id/socialMediaLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_insert_link_black_24dp"
        android:layout_marginTop="10dp"
        android:drawableTint="@color/business_title"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/accountBvn"
        android:hint="Most active social media link"
        android:backgroundTint="@android:color/transparent"
        android:focusable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialMediaLink"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner"
        android:layout_marginBottom="20dp"
        android:text="Register Business"/>
</RelativeLayout>
</ScrollView>